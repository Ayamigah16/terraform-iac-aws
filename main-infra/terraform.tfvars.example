# Example Terraform Variables
# Copy this file to terraform.tfvars and update with your values
# DO NOT commit terraform.tfvars to version control

# AWS Configuration
aws_region   = "eu-west-1"
profile_name = "default"
environment  = "dev"

# Network Configuration
vpc_cidr    = "10.0.0.0/16"
subnet_cidr = "10.0.1.0/24"
aws_az      = "eu-west-1a"

# Security - SSH Access Configuration
# Option 1: Auto-detect (recommended) - Leave empty to automatically detect your public IP
my_ip_cidr = "" # Auto-detect your public IP

# Option 2: Manual - Specify your IP address in CIDR notation
# my_ip_cidr = "203.0.113.0/32"
# Find your IP: curl -4 ifconfig.me

# EC2 Configuration
# Find AMI for your region: aws ec2 describe-images --owners 099720109477 --filters "Name=name,Values=ubuntu/images/hvm-ssd/ubuntu-jammy-22.04-amd64-server-*" --query 'sort_by(Images, &CreationDate)[-1].ImageId'
ami_id        = "ami-0694d931cee176e7d" # Ubuntu 22.04 LTS in eu-west-1
instance_type = "t3.micro"              # t2.micro, t3.micro, t3.small, etc.
